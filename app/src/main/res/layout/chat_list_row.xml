                android:layout_marginEnd="5dp"
                android:orientation="vertical">
                <include layout="@layout/meal_change_chat_item"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/extension"
                android:visibility="gone"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">
                <include layout="@layout/extension_request_chat_item"
                    />
            </LinearLayout>-->

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_gravity="right"
                android:layout_marginStart="100dp"
                emojicon:cardCornerRadius="10dp"
                emojicon:cardBackgroundColor="@color/grey_700">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/profileImageRight"
            android:orientation="vertical"
            android:id="@+id/chatbackgroundRight"
            android:layout_height="wrap_content">
            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="@font/sourcesansproregular"
                android:id="@+id/message_right"
                android:gravity="left"
                android:textColor="@color/textColorLight"
                emojicon:emojiconSize="20sp"
                />
            <ImageView
                android:id="@+id/img_chat_right"
                android:minWidth="200dp"
                android:minHeight="200dp"
                android:visibility="gone"
                android:transitionName="image"
                android:layout_margin="6dp"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:background="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
            </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:fontFamily="@font/sourcesansproregular"
            android:textColor="@color/grey_400"
            android:paddingRight="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_below="@id/chatbackgroundRight"
            android:text="12:30 p.m."
            android:paddingTop="5dp"
            android:id="@+id/timeRight"/>
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>