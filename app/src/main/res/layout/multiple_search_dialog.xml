<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/layout_very_small_margin"
    app:cardCornerRadius="10dp"
    android:paddingLeft="@dimen/medium_padding"
    android:paddingRight="@dimen/medium_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/large_padding"
        android:paddingBottom="@dimen/large_padding"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_padding"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/medium_padding"
            android:background="@drawable/textarea_border_light"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:hint="Search here..."
            android:id="@+id/search"
            android:textSize="@dimen/text_medium"
            android:fontFamily="@font/defaultfont"
            android:layout_marginLeft="@dimen/layout_small_margin"
            android:layout_marginRight="@dimen/layout_small_margin"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxHeight="300dp"
            android:layout_marginStart="@dimen/layout_very_small_margin"
            android:layout_marginEnd="@dimen/layout_very_small_margin"
            android:scrollbars="vertical"
            android:id="@+id/selection_re"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"
            android:textSize="@dimen/text_small"
            android:text="Done"
            android:padding="@dimen/small_padding"
            android:layout_margin="@dimen/layout_small_margin"
            android:id="@+id/done"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>