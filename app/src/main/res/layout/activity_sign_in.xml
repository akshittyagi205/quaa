<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".general.SignInActivity"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/qua_logo"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/spacing_xxxlarge"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_small_margin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_very_large"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="SignIn With Phone Number"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:textColor="@color/grey_300"
            android:gravity="center"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginStart="@dimen/layout_small_margin"
            android:layout_marginEnd="@dimen/layout_small_margin"
            android:text="An OTP will be sent to the number you enter and will be verified to proceed."
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/editText"
        android:layout_marginTop="@dimen/layout_small_margin"
        android:layout_marginLeft="@dimen/spacing_mlarge"
        android:layout_marginRight="@dimen/spacing_mlarge"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:layout_marginBottom="@dimen/layout_medium_margin"
            android:background="@drawable/ic_background_stroke"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding"
                android:text="+91"
                android:fontFamily="@font/sourcesansproregular"
                android:gravity="center"
                android:layout_marginLeft="@dimen/layout_very_small_margin"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_small" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:fontFamily="@font/sourcesansproregular"
                android:hint="Enter your phone number"
                android:inputType="phone"
                android:padding="@dimen/small_padding"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/text_small" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:layout_margin="3dp"
            android:elevation="5dp"
            android:id="@+id/proceed"
            android:background="@drawable/button_back"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorLight"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold"
                android:fontFamily="@font/sourcesansproregular"
                android:text="Proceed"
                android:padding="@dimen/small_padding"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>
