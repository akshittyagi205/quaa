<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorLight"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/small_padding"
            android:id="@+id/prev"
            android:text="&lt; PREV"
            android:layout_marginLeft="@dimen/layout_very_small_margin"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:gravity="right"
            android:id="@+id/next"
            android:layout_marginRight="@dimen/layout_very_small_margin"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorLight"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/small_padding"
            android:text="NEXT &gt;"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:padding="5dp"
        android:src="@drawable/ic_no_image"
        android:background="@color/transparent"
        android:id="@+id/image"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share"
        android:padding="@dimen/small_padding"
        android:layout_gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textColorLight"
            android:padding="@dimen/small_padding"
            android:text="Share"/>
        <ImageView
            android:layout_width="25dp"
            android:padding="5dp"
            android:layout_height="25dp"
            android:tint="@color/textColorLight"
            android:src="@drawable/ic_share_blog"
            />
    </LinearLayout>
</LinearLayout>