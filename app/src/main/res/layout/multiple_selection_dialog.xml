<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/layout_very_small_margin"
    app:cardCornerRadius="10dp"
    android:paddingLeft="@dimen/medium_padding"
    android:paddingRight="@dimen/medium_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/large_padding"
        android:orientation="vertical"
        android:paddingBottom="@dimen/large_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_medium"
            android:text="Select Days"
            android:visibility="gone"
            android:padding="@dimen/layout_small_margin"
            android:id="@+id/title"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_very_small_margin"
        android:layout_marginEnd="@dimen/layout_very_small_margin"
        android:id="@+id/selection_re"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_small"
            android:padding="@dimen/large_padding"
            android:layout_marginRight="@dimen/layout_small_margin"
            android:textStyle="bold"
            android:id="@+id/done"
            android:fontFamily="@font/defaultfont"
            android:text="DONE"
            android:layout_gravity="end"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>