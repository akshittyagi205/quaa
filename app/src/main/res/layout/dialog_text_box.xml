<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_padding"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:id="@+id/title"
            android:padding="@dimen/medium_padding"
            android:textSize="@dimen/text_large"
            android:text="What Did you eat instead?"/>





        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/note"
            android:layout_margin="@dimen/layout_small_margin"
            android:background="@drawable/textarea_border"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:fontFamily="@font/defaultfont"
            android:textSize="@dimen/text_medium"
            android:minLines="3"
            android:minHeight="100dp"
            android:maxLines="5"
            android:hint="Enter here..."
            android:padding="@dimen/medium_padding"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginTop="@dimen/layout_small_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/skip"
                android:gravity="center"
                android:layout_marginRight="@dimen/layout_small_margin"
                android:layout_marginLeft="@dimen/layout_big_margin"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/curve_back_stoke"
                android:textColor="@color/colorAccent"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:textAllCaps="true"
                android:textSize="@dimen/text_small"
                android:text="Skip"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/save"
                android:gravity="center"
                android:layout_marginLeft="@dimen/layout_small_margin"
                android:layout_marginRight="@dimen/layout_big_margin"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/curve_back"
                android:textColor="@color/textColorLight"
                android:paddingTop="@dimen/small_padding"
                android:textAllCaps="true"
                android:textSize="@dimen/text_small"
                android:paddingBottom="@dimen/small_padding"
                android:text="Save"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>