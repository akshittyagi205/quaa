<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_small_margin"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




        <TextView
            android:id="@+id/packageName_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_small_margin"
            android:padding="@dimen/small_padding"
            android:text="Weight Loss Package "
            android:textSize="@dimen/text_medium"
            android:maxLines="2"
            android:textColor="@color/colorPrimary"
            app:fontFamily="@font/defaultfont" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingLeft="@dimen/medium_padding"
                android:background="@color/gray"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/medium_padding"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/grey_10"
                    android:src="@drawable/ic_duration_icon" />
        <TextView
            android:id="@+id/packageDuration_label"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/medium_padding"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/grey_10" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/grey_10" />

        <TextView
            android:id="@+id/packageDuration_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/small_padding"
            android:text="3 Months"

            android:textColor="@color/grey_10" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small"
                android:paddingLeft="@dimen/medium_padding"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/grey_10"
                    android:src="@drawable/ic_amount_icon" />
                <TextView
                    android:id="@+id/packageAmount_label"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/grey_10"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/medium_padding"

                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/grey_10" />


                <TextView
                    android:id="@+id/packageAmount_id"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Rs 3000"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/small_padding"
                    android:textColor="@color/grey_10" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small"
                android:paddingLeft="@dimen/medium_padding"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/grey_10"
                    android:src="@drawable/ic_discount_icon" />

                <TextView
                    android:id="@+id/packageDiscount_label"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Discount"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/medium_padding"

                    android:textColor="@color/grey_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/grey_10" />


                <TextView
                    android:id="@+id/packageDiscount_id"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Rs 0 "
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/small_padding"
                    android:textColor="@color/grey_10" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/layout_small_margin"
                android:paddingLeft="@dimen/medium_padding"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/grey_10"
                    android:src="@drawable/ic_startdate"
                    />

                <TextView
                    android:id="@+id/packageDate_label"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/medium_padding"

                    android:textColor="@color/grey_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/grey_10" />


                <TextView
                    android:id="@+id/packageDate_id"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="12/04/2019 "
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/small_padding"
                    android:textColor="@color/grey_10" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_small"
                android:visibility="gone"
                android:background="@color/gray"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Extend"
                    android:background="@color/colorAccent"
                    android:textColor="@color/textColorLight"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/small_padding"
                    android:id="@+id/extension_id"
                    android:textSize="@dimen/text_large"
                   />

                <View
                    android:layout_width="1dp"
                    android:id="@+id/divider"
                    android:layout_height="match_parent"
                    android:background="@color/textColorLight"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="View Receipts"
                    android:background="@color/colorAccent"
                    android:textColor="@color/textColorLight"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/small_padding"
                    android:id="@+id/receipt"
                    android:textSize="@dimen/text_large"
                    />

            </LinearLayout>





            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/grey_5" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>







</LinearLayout>