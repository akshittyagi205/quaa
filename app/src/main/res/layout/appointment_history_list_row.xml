<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_medium"
    android:clickable="true"
    android:paddingLeft="@dimen/spacing_large"
    android:paddingRight="@dimen/spacing_large"
    android:paddingTop="@dimen/spacing_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clipToPadding="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_gravity="center_vertical"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/grey_800">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large"
                    android:gravity="center"
                    android:id="@+id/newDate"
                    android:layout_marginTop="@dimen/layout_small_margin"
                    android:textColor="@color/textColorLight"
                    android:fontFamily="@font/defaultfont"
                    android:text="12 Nov"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large"
                    android:gravity="center"
                    android:id="@+id/newYear"
                    android:textColor="@color/textColorLight"
                    android:fontFamily="@font/defaultfont"
                    android:text="2019"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:gravity="center"
                    android:id="@+id/time"
                    android:layout_marginBottom="@dimen/layout_small_margin"
                    android:textColor="@color/textColorLight"
                    android:fontFamily="@font/defaultfont"
                    android:text="12:24 P.M."/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="@dimen/spacing_large"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium"
                android:text="Appointmet with Akshit tyagi"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                app:fontFamily="@font/defaultfont" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type : Call"
                    android:id="@+id/type"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/grey_300"
                    app:fontFamily="@font/defaultfont" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity : -"
                    android:id="@+id/activity_type"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/grey_300"
                    app:fontFamily="@font/defaultfont" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status : Confirmed"
                android:layout_weight="0.5"
                android:id="@+id/status"
                android:textSize="@dimen/text_small"
                android:textColor="@color/grey_300"
                app:fontFamily="@font/defaultfont" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clinic : Confirmed"
                android:maxLines="1"
                android:id="@+id/notes"
                android:layout_weight="0.5"
                android:textSize="@dimen/text_small"
                android:textColor="@color/grey_300"
                app:fontFamily="@font/defaultfont" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:fontFamily="@font/defaultfont"
                android:text="Wed, 20 Jan 19, 05:08 PM"
                android:textColor="@color/grey_40" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/spacing_middle"
        android:background="@color/grey_5" />

</LinearLayout>