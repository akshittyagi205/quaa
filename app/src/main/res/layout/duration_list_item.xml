<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="@dimen/layout_small_margin"
        android:id="@+id/card"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/textColorLight">

        <LinearLayout
            android:layout_width="200dp"
            android:minHeight="130dp"
            android:padding="@dimen/small_padding"
            android:background="@drawable/duration_card_gradient"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:text="1 Month"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/layout_small_margin"
                android:gravity="center"
                android:textSize="@dimen/text_very_large"
                android:maxLines="2"
                android:textColor="@color/textColorLight"
                app:fontFamily="@font/defaultfont" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingLeft="@dimen/medium_padding"
                android:background="@color/textColorLight"
                />



            <TextView
                android:id="@+id/discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/small_padding"
                android:text="10,000"
                android:visibility="invisible"
                android:gravity="center"
                android:textSize="@dimen/text_small"
                android:textColor="@color/textColorLight"
                app:fontFamily="@font/defaultfont" />
            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10,000"
                android:gravity="center"
                android:textSize="@dimen/text_very_large"
                android:textColor="@color/textColorLight"
                app:fontFamily="@font/defaultfont" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>