<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:id="@+id/card"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"/>

            <TextView
                android:id="@+id/duration"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_large_padding"
                android:text="1 Month"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/textColorLight"
                app:fontFamily="@font/defaultfont" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingLeft="@dimen/medium_padding"
                android:visibility="gone"
                android:background="@color/textColorLight"
                />



            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:layout_marginEnd="@dimen/layout_very_small_margin"
                android:text=""
                android:layout_gravity="center"
                android:gravity="end"
                android:textSize="@dimen/text_very_small"
                android:textColor="@color/textColorLight"
                app:fontFamily="@font/defaultfont" />
            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/layout_small_margin"
                android:gravity="center"
                android:textSize="@dimen/text_large"
                android:textColor="@color/textColorLight"
                app:fontFamily="@font/defaultfont" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>