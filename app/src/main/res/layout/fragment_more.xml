<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    >

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="200dp"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@drawable/world_map"-->
        <!--android:tint="@color/yellow_800" />-->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:scrollingCache="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_mxlarge"
                android:paddingRight="@dimen/spacing_mxlarge"
                android:paddingTop="@dimen/spacing_mxlarge"
                >

                <RelativeLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="80dp"
                    android:layout_centerInParent="true"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_no_image" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_purple"
                        android:padding="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:tint="@color/textColorLight"
                        android:src="@drawable/ic_menu_camera"/>
                </RelativeLayout>
                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/clientProfile"
                    android:background="?selectableItemBackground"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Akshit Tyagi"
                        android:id="@+id/user_name"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary"
                        app:fontFamily="@font/defaultfont" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="akshittyagi@gmail.com"
                        android:textSize="@dimen/text_very_small"
                        android:id="@+id/user_email"
                        android:fontFamily="@font/defaultfont"
                        android:textColor="@color/grey_200" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+919990105832"
                        android:textSize="@dimen/text_very_small"
                        android:id="@+id/user_number"
                        android:fontFamily="@font/defaultfont"
                        android:textColor="@color/grey_200" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:gravity="center"
                android:orientation="vertical">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/feed_layout"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large">

                    <ImageView
                        android:layout_width="30dp"
                        android:padding="4dp"
                        android:layout_height="30dp"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/ic_blog" />
                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:text="Health Feed"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_small"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/textColorLight" />


                    <ImageView
                        android:layout_width="30dp"
                        android:padding="4dp"
                        android:layout_height="30dp"
                        android:tint="@color/grey_40"
                        android:src="@drawable/ms_ic_chevron_right" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/layout_small_margin"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="@color/grey_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/plan_layout"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/ic_card" />
                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:text="Plans &amp; Packages"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_small"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/textColorLight" />


                    <ImageView
                        android:layout_width="30dp"
                        android:padding="4dp"
                        android:layout_height="30dp"
                        android:tint="@color/grey_40"
                        android:src="@drawable/ms_ic_chevron_right" />



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/layout_small_margin"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="@color/grey_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/assessment_layout"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/ic_progress" />
                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:text="Assessment"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_small"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/textColorLight" />


                    <ImageView
                        android:layout_width="30dp"
                        android:padding="4dp"
                        android:layout_height="30dp"
                        android:tint="@color/grey_40"
                        android:src="@drawable/ms_ic_chevron_right" />



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/layout_small_margin"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="@color/grey_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/workout_layout"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/ic_workout" />
                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:text="Exercise Recommendations"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_small"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/textColorLight" />


                    <ImageView
                        android:layout_width="30dp"
                        android:padding="4dp"
                        android:layout_height="30dp"
                        android:tint="@color/grey_40"
                        android:src="@drawable/ms_ic_chevron_right" />



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/layout_small_margin"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="@color/grey_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/profile_layout"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/ic_my_profile" />
                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:text="My Profile"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_small"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/textColorLight" />

                    <ImageView
                        android:layout_width="30dp"
                        android:padding="4dp"
                        android:layout_height="30dp"
                        android:tint="@color/grey_40"
                        android:src="@drawable/ms_ic_chevron_right" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_child_layout"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/spacing_mlarge"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/layout_very_small_margin"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:id="@+id/basic_info_layout"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@color/transparent"
                                android:tint="@color/grey_200"
                                android:alpha="0.8"
                                android:layout_gravity="top"
                                android:padding="@dimen/medium_padding"
                                app:srcCompat="@drawable/ic_arrow_left" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_small"
                                android:fontFamily="sans-serif-light"
                                android:text="Basic Information"
                                android:textStyle="bold"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/textColorLight" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_large"
                            android:layout_marginRight="@dimen/spacing_large"
                            android:text="Physical activity, blood group, diseases and reports"
                            android:textSize="@dimen/text_very_small"
                            android:visibility="gone"
                            android:textColor="@color/grey_200"
                            android:maxLines="1"
                            android:minLines="1"
                            app:fontFamily="@font/defaultfont"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/layout_very_small_margin"
                        android:background="@color/grey_400"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_very_small_margin"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/medical_info_layout"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@color/transparent"
                            android:tint="@color/grey_200"
                            android:alpha="0.8"
                            android:layout_gravity="top"
                            android:padding="@dimen/medium_padding"
                            app:srcCompat="@drawable/ic_arrow_left" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:text="Medical History"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/textColorLight" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large"
                        android:text="Physical activity, blood group, diseases and reports"
                        android:textSize="@dimen/text_very_small"
                        android:visibility="gone"
                        android:textColor="@color/grey_200"
                        android:maxLines="1"
                        android:minLines="1"
                        app:fontFamily="@font/defaultfont"
                        />

                </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/layout_very_small_margin"
                        android:background="@color/grey_400"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_very_small_margin"
                    android:id="@+id/food_info_layout"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@color/transparent"
                            android:tint="@color/grey_200"
                            android:alpha="0.8"
                            android:layout_gravity="top"
                            android:padding="@dimen/medium_padding"
                            app:srcCompat="@drawable/ic_arrow_left" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:textSize="@dimen/text_small"
                            android:text="Food Specifications"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/textColorLight" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large"
                        android:text="Diet preferences, allergies and cuisine"
                        android:textSize="@dimen/text_very_small"
                        android:visibility="gone"
                        android:textColor="@color/grey_200"
                        android:maxLines="1"
                        android:minLines="1"
                        app:fontFamily="@font/defaultfont"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/layout_very_small_margin"
                        android:background="@color/grey_400"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/layout_very_small_margin"
                        android:id="@+id/general_data_layout"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@color/transparent"
                                android:tint="@color/grey_200"
                                android:alpha="0.8"
                                android:layout_gravity="top"
                                android:padding="@dimen/medium_padding"
                                app:srcCompat="@drawable/ic_arrow_left" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_small"
                                android:fontFamily="sans-serif-light"
                                android:text="General Activity"
                                android:textStyle="bold"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/textColorLight" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_large"
                            android:layout_marginRight="@dimen/spacing_large"
                            android:text="Diet preferences, allergies and cuisine"
                            android:textSize="@dimen/text_very_small"
                            android:visibility="gone"
                            android:textColor="@color/grey_200"
                            android:maxLines="1"
                            android:minLines="1"
                            app:fontFamily="@font/defaultfont"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/layout_very_small_margin"
                            android:background="@color/grey_400"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/layout_very_small_margin"
                        android:id="@+id/time_info_layout"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@color/transparent"
                                android:tint="@color/grey_200"
                                android:alpha="0.8"
                                android:layout_gravity="top"
                                android:padding="@dimen/medium_padding"
                                app:srcCompat="@drawable/ic_arrow_left" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-light"
                                android:text="Time Information"
                                android:textSize="@dimen/text_small"
                                android:textStyle="bold"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/textColorLight" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_large"
                            android:layout_marginRight="@dimen/spacing_large"
                            android:text="Diet preferences, allergies and cuisine"
                            android:textSize="@dimen/text_very_small"
                            android:visibility="gone"
                            android:textColor="@color/grey_200"
                            android:maxLines="1"
                            android:minLines="1"
                            app:fontFamily="@font/defaultfont"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/layout_very_small_margin"
                            android:background="@color/grey_400"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="@color/grey_10" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_mlarge" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>