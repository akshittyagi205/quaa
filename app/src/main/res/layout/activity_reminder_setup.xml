<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/textColorLight"
    android:layout_height="match_parent"
    tools:context=".diet.ReminderSetupActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:id="@+id/appbar"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:titleTextColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

</com.google.android.material.appbar.AppBarLayout>


<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="@dimen/text_small"-->
            <!--android:text="Please add you Diet Recall here "/>-->


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="10"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_small_margin"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/checkboxEarly"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="4"
                        android:id="@+id/earlyMorningTxt"
                        android:layout_height="wrap_content"
                        android:text="Early Morning"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="6:00"
                        android:layout_weight="1"
                        android:id="@+id/EMtimetxt"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content" />



                </LinearLayout>


                <EditText
                    android:layout_margin="@dimen/layout_medium_margin"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/meal_early"
                    android:visibility="gone"
                    android:hint="Enter meal here"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_small_margin"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/checkboxBreak"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="4"
                        android:id="@+id/breakfastTxt"
                        android:layout_height="wrap_content"
                        android:text="Breakfast"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="10:00"
                        android:id="@+id/BtimeTxt"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <EditText
                    android:layout_margin="@dimen/layout_medium_margin"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/meal_breakfast"
                    android:visibility="gone"
                    android:hint="Enter meal here"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_small_margin"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/checkboxMidMorning"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="4"
                        android:id="@+id/MidMorningText"
                        android:layout_height="wrap_content"
                        android:text="Mid Morning"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="12:00"
                        android:layout_weight="1"
                        android:id="@+id/MMtimeTxt"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <EditText
                    android:layout_margin="@dimen/layout_medium_margin"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/meal_midMor"
                    android:visibility="gone"
                    android:hint="Enter meal here"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_small_margin"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/checkboxLunch"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="4"
                        android:id="@+id/lunchTxt"
                        android:layout_height="wrap_content"
                        android:text="Lunch"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="14:00"
                        android:layout_weight="1"
                        android:id="@+id/LtimeTxt"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <EditText
                    android:layout_margin="@dimen/layout_medium_margin"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/meal_lunch"
                    android:visibility="gone"
                    android:hint="Enter meal here"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_small_margin"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/checkboxEvening"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="4"
                        android:id="@+id/EveningTxt"
                        android:layout_height="wrap_content"
                        android:text="Evening"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="16:00"
                        android:layout_weight="1"
                        android:id="@+id/EtimeTxt"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content" />


                </LinearLayout>



                <EditText
                    android:layout_margin="@dimen/layout_medium_margin"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/meal_evening"
                    android:visibility="gone"
                    android:hint="Enter meal here"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_small_margin"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/checkboxLateEvening"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="4"
                        android:id="@+id/LateEveningTxt"
                        android:layout_height="wrap_content"
                        android:text="Late Evening"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="18:00"
                        android:layout_weight="1"
                        android:id="@+id/LateEtimeTxt"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_small_margin"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/checkboxDinner"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="4"
                        android:id="@+id/DinnerTxt"
                        android:layout_height="wrap_content"
                        android:text="Dinner"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="20:00"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:id="@+id/DtimeTxt"
                        android:layout_height="wrap_content" />


                </LinearLayout>



                <EditText
                    android:layout_margin="@dimen/layout_medium_margin"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/meal_dinner"
                    android:visibility="gone"
                    android:hint="Enter meal here"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_small_margin"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/checkboxPostDinner"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="4"
                        android:id="@+id/postDinnerTxt"
                        android:layout_height="wrap_content"
                        android:text="Post Dinner"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="22:00"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:id="@+id/PDtimeTxt"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <EditText
                    android:layout_margin="@dimen/layout_medium_margin"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/meal_postDinner"
                    android:visibility="gone"
                    android:hint="Enter meal here"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom">


        <Button
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:text="SAVE"
            android:id="@+id/saveButton"
            android:textSize="@dimen/text_medium"
            android:fontFamily="@font/defaultfont"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
